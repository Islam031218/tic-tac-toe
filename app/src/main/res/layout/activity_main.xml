<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    app:layout_constraintDimensionRatio="1:1"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/board" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="383dp"
        android:layout_height="424dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/image_4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:onClick="dropIn"
            android:tag="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_clear_24" />


        <ImageView
            android:id="@+id/image_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:onClick="dropIn"
            android:tag="6"
            app:layout_constraintBottom_toBottomOf="@+id/image_"
            app:layout_constraintEnd_toEndOf="@+id/image_5"
            app:layout_constraintStart_toStartOf="@+id/image_5"
            app:layout_constraintTop_toTopOf="@+id/image_"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:onClick="dropIn"
            android:tag="8"
            app:layout_constraintBottom_toBottomOf="@+id/image_"
            app:layout_constraintEnd_toEndOf="@+id/image_6"
            app:layout_constraintStart_toEndOf="@+id/image_4"
            app:layout_constraintTop_toTopOf="@+id/image_"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

        <ImageView
            android:id="@+id/image_5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="10dp"
            android:alpha="0"
            android:onClick="dropIn"
            android:tag="3"
            app:layout_constraintBottom_toBottomOf="@+id/image_4"
            app:layout_constraintEnd_toStartOf="@+id/image_4"
            app:layout_constraintTop_toTopOf="@+id/image_4"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

        <ImageView
            android:id="@+id/image_6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="10dp"
            android:alpha="0"
            android:onClick="dropIn"
            android:tag="5"
            app:layout_constraintBottom_toBottomOf="@+id/image_4"
            app:layout_constraintStart_toEndOf="@+id/image_4"
            app:layout_constraintTop_toTopOf="@+id/image_4"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

        <ImageView
            android:id="@+id/image_7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="10dp"
            android:alpha="0"
            android:onClick="dropIn"
            android:tag="0"
            app:layout_constraintBottom_toBottomOf="@+id/image_8"
            app:layout_constraintEnd_toEndOf="@+id/image_5"
            app:layout_constraintStart_toStartOf="@+id/image_5"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

        <ImageView
            android:id="@+id/image_8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginVertical="15dp"
            android:alpha="0"
            android:onClick="dropIn"
            android:tag="1"
            app:layout_constraintBottom_toTopOf="@+id/image_4"
            app:layout_constraintEnd_toEndOf="@+id/image_4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/image_4"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

        <ImageView
            android:id="@+id/image_9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:onClick="dropIn"
            android:tag="2"
            app:layout_constraintBottom_toBottomOf="@+id/image_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_6"
            app:layout_constraintTop_toTopOf="@+id/image_8"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

        <ImageView
            android:id="@+id/image_"
            android:layout_width="120dp"
            android:layout_height="126dp"
            android:layout_marginVertical="15dp"
            android:alpha="0"
            android:onClick="dropIn"
            android:tag="7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/image_4"
            app:layout_constraintStart_toStartOf="@+id/image_4"
            app:layout_constraintTop_toBottomOf="@+id/image_4"
            app:srcCompat="@drawable/ic_baseline_clear_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="restart"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>